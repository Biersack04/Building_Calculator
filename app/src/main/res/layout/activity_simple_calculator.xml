<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SimpleCalculator">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_center_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/vertical_center_percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/workingsTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/dark_blue"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/dark_blue"
            android:textSize="45sp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:orientation="horizontal"
        app:useDefaultMargins="true">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="AC"
            android:textColor="@color/box_stroke"
            app:backgroundTint="@color/white"
            app:cornerRadius="10dp"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="20sp"
            android:textColor="@color/box_stroke"
            app:backgroundTint="@color/white"
            app:cornerRadius="10dp"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="&#37;"
            android:textColor="@color/box_stroke"
            app:backgroundTint="@color/white"
            app:cornerRadius="10dp"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:textSize="20sp"
            app:layout_rowWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="divisionOnClick"
            android:text="&#247;"
            android:textColor="@color/box_stroke"
            app:backgroundTint="@color/white"
            app:cornerRadius="10dp"
            app:layout_columnWeight="1"
            android:textSize="20sp"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            app:layout_rowWeight="1"
            android:onClick="oneOnClick" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:cornerRadius="10dp"
            android:textSize="20sp"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            app:layout_rowWeight="1"
            android:onClick="twoOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            app:layout_rowWeight="1"
            android:onClick="threeOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="&#215;"
            app:layout_columnWeight="1"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            android:onClick="multiplicationOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            app:layout_rowWeight="1"
            app:cornerRadius="10dp"
            android:textSize="20sp"
            android:onClick="fourOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            app:layout_rowWeight="1"
            android:textSize="20sp"
            android:onClick="fiveOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:textSize="20sp"
            app:layout_rowWeight="1"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            android:onClick="sixOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="&#8722;"
            app:layout_columnWeight="1"
            android:textSize="20sp"
            app:layout_gravity="fill"
            app:cornerRadius="10dp"
            app:layout_rowWeight="1"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            android:onClick="minusOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            app:layout_rowWeight="1"
            android:onClick="sevenOnClick"/>

        <com.google.android.material.button.MaterialButton

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8"
            app:layout_columnWeight="1"
            android:textSize="20sp"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            android:onClick="eightOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            app:layout_columnWeight="1"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            app:layout_gravity="fill"
            android:textSize="20sp"
            app:layout_rowWeight="1"
            app:cornerRadius="10dp"
            android:onClick="nineOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="&#43;"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:cornerRadius="10dp"
            android:textSize="20sp"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            android:onClick="plusOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="&#65049;"
            android:background="@android:color/transparent"
            app:layout_columnWeight="1"
            app:backgroundTint="@color/white"
            android:textSize="20sp"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_columnWeight="1"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            app:layout_gravity="fill"
            app:cornerRadius="10dp"
            app:layout_rowWeight="1"
            android:textSize="20sp"
            android:onClick="zeroOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="&#8218;"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:cornerRadius="10dp"
            android:textSize="20sp"
            app:layout_rowWeight="1"
            android:onClick="decimalOnClick"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="&#42239;"
            app:layout_columnWeight="1"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/box_stroke"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:textSize="20sp"
            android:onClick="equalsOnClick"/>

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>