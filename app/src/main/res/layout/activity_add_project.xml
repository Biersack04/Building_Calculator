<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".AddProjectActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_center_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_center_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/down_guideline_percent_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="48dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline_72dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="24dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@id/title_text_view_add_project_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=""
        android:textColor="@color/light_gray"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_24dp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_24dp"
        app:layout_constraintTop_toTopOf="@+id/top_guideline_72dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/title_add_project_layout"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColorHint="@color/white"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="@color/light_gray"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_24dp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_24dp"
        app:layout_constraintTop_toBottomOf="@id/title_text_view_add_project_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@id/edit_title_add_project_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/enter_title"
            android:inputType="textCapWords"
            android:singleLine="false"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/address_layout_add_project_layout"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColorHint="@color/white"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="@color/light_gray"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_24dp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_24dp"
        app:layout_constraintTop_toBottomOf="@+id/title_add_project_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@id/edit_address_add_project_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/enter_address"
            android:inputType="text"
            android:singleLine="false"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/create_date_layout_add_project_layout"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColorHint="@color/white"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="@color/light_gray"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_24dp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_24dp"
        app:layout_constraintTop_toBottomOf="@id/address_layout_add_project_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@id/edit_create_date_add_project_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/enter_date_of_create"
            android:inputType="number"
            android:singleLine="false"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/status_input_add_project_layout"
        style="@style/ExposedDropdownMenu"
        android:layout_width="@dimen/zero_value"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/enter_status"
        android:textColor="@color/light_gray"
        app:boxCornerRadiusBottomEnd="@dimen/corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/corner_radius"
        app:boxCornerRadiusTopStart="@dimen/corner_radius"
        app:boxStrokeWidth="@dimen/box_stroke_width"
        app:boxStrokeWidthFocused="@dimen/box_stroke_width_focus"
        app:endIconTint="@color/light_gray"
        app:hintTextColor="@color/light_gray"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_24dp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_24dp"
        app:layout_constraintTop_toBottomOf="@+id/end_date_layout_add_project_layout">

        <AutoCompleteTextView
            android:id="@id/status_item_add_project_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="@color/light_gray"
            tools:ignore="LabelFor" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/end_date_layout_add_project_layout"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColorHint="@color/white"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="@color/light_gray"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_24dp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_24dp"
        app:layout_constraintTop_toBottomOf="@+id/create_date_layout_add_project_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@id/edit_end_date_add_project_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/enter_date_of_end"
            android:inputType="number"
            android:singleLine="false"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@id/save_project_add_project_layout"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingTop="11dp"
        android:paddingRight="16dp"
        android:paddingBottom="11dp"
        android:shadowDx="2"
        android:shadowDy="5"
        android:text="@string/save"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:elevation="5dp"
        android:onClick="saveProject"
        app:layout_constraintBottom_toTopOf="@+id/down_guideline_percent_7"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center_percent"
        app:layout_constraintStart_toStartOf="@+id/left_min"
        app:layout_constraintTop_toTopOf="@+id/horizontal_center_7"
        app:strokeColor="@color/light_gray"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@id/delete_project_add_project_layout"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingTop="11dp"
        android:paddingRight="16dp"
        android:paddingBottom="11dp"
        android:shadowDx="2"
        android:shadowDy="5"
        android:text="@string/delete"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/down_guideline_percent_7"
        app:layout_constraintEnd_toStartOf="@+id/right_min"
        app:layout_constraintStart_toStartOf="@+id/vertical_center_percent"
        app:layout_constraintTop_toTopOf="@+id/horizontal_center_7"
        app:strokeColor="@color/light_gray"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@id/add_customer_add_project_layout"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:shadowDx="2"
        android:shadowDy="5"
        android:text="@string/add_customer"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:elevation="5dp"
        app:icon="@drawable/ic_add_24"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_center_7"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center_percent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/left_min"
        app:layout_constraintTop_toBottomOf="@+id/status_input_add_project_layout"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="@color/light_gray"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@id/add_work_add_project_layout"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:shadowDx="2"
        android:shadowDy="5"
        android:text="@string/add_work"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:elevation="5dp"
        app:icon="@drawable/ic_add_24"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_center_7"
        app:layout_constraintEnd_toStartOf="@+id/right_min"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/vertical_center_percent"
        app:layout_constraintTop_toTopOf="@+id/horizontal_center"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="@color/light_gray"
        app:strokeWidth="3dp" />
    
</androidx.constraintlayout.widget.ConstraintLayout>