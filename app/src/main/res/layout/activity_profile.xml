<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ProfileActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/down_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="72dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/down_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/down_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp" />

    <ImageView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:onClick="editProfile"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toTopOf="@+id/top"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/right_center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/image_profile"
        app:layout_constraintEnd_toStartOf="@+id/right_center"
        app:layout_constraintStart_toStartOf="@+id/left_center"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/personal_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/personal_data"
        android:textColor="@color/light_gray"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/top"
        app:layout_constraintEnd_toStartOf="@+id/right_center"
        app:layout_constraintStart_toStartOf="@+id/left_center"
        app:layout_constraintTop_toBottomOf="@+id/imageProfile" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/surname"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@+id/personal_information"
        app:layout_constraintVertical_chainStyle="spread" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/patronymic"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@+id/surname" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/patronymic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patronymic"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@+id/name" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/telephone"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@+id/patronymic" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telephone"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/status"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/name_of_firm"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@+id/telephone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_of_firm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_of_firm"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/address"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@+id/status" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/number_of_workers"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@+id/name_of_firm" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/number_of_workers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_space"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/additional_field"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/additional_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_space"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/down_percent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@+id/number_of_workers" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/personal_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/personal_name"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_center"
        app:layout_constraintTop_toBottomOf="@+id/personal_information"
        app:layout_constraintVertical_chainStyle="spread" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/personal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/personal_patronymic"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_center"
        app:layout_constraintTop_toBottomOf="@+id/personal_surname" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/personal_patronymic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/personal_email"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_center"
        app:layout_constraintTop_toBottomOf="@+id/personal_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/personal_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/personal_telephone"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_center"
        app:layout_constraintTop_toBottomOf="@+id/personal_patronymic" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/personal_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/personal_status"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_center"
        app:layout_constraintTop_toBottomOf="@+id/personal_email" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/personal_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/personal_name_of_firm"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_center"
        app:layout_constraintTop_toBottomOf="@+id/personal_telephone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/personal_name_of_firm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/personal_address"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_center"
        app:layout_constraintTop_toBottomOf="@+id/personal_status" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/personal_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/personal_number_of_workers"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_center"
        app:layout_constraintTop_toBottomOf="@+id/personal_name_of_firm" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/personal_number_of_workers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/personal_additional_field"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_center"
        app:layout_constraintTop_toBottomOf="@+id/personal_address" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/personal_additional_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/down_percent"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_center"
        app:layout_constraintTop_toBottomOf="@+id/personal_number_of_workers" />

    <ImageView
        android:id="@+id/image_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/menu"
        android:onClick="menu"
        app:layout_constraintBottom_toTopOf="@+id/down_image"
        app:layout_constraintEnd_toStartOf="@+id/left_center"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toTopOf="@+id/down_percent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toTopOf="@+id/down_image"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/right_center"
        app:layout_constraintTop_toTopOf="@+id/down_percent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/image_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/home"
        android:onClick="myProject"
        app:layout_constraintBottom_toTopOf="@+id/down_image"
        app:layout_constraintEnd_toStartOf="@+id/right_center"
        app:layout_constraintStart_toStartOf="@+id/left_center"
        app:layout_constraintTop_toTopOf="@+id/down_percent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/menu"
        android:textColor="@color/light_gray"
        android:textSize="12sp"
        android:textStyle="bold"
        android:onClick="menu"
        app:layout_constraintBottom_toTopOf="@+id/down_text"
        app:layout_constraintEnd_toStartOf="@+id/left_center"
        app:layout_constraintStart_toStartOf="@+id/left"
        app:layout_constraintTop_toTopOf="@+id/down_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/profile"
        android:textColor="@color/light_gray"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/down_text"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toStartOf="@+id/right_center"
        app:layout_constraintTop_toTopOf="@+id/down_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/my_project"
        android:textColor="@color/light_gray"
        android:textSize="12sp"
        android:textStyle="bold"
        android:onClick="myProject"
        app:layout_constraintBottom_toTopOf="@+id/down_text"
        app:layout_constraintEnd_toStartOf="@+id/right_center"
        app:layout_constraintStart_toStartOf="@+id/left_center"
        app:layout_constraintTop_toTopOf="@+id/down_image" />

</androidx.constraintlayout.widget.ConstraintLayout>